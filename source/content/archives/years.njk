---
eleventyExcludeFromCollections: true
eleventyComputed:
  title: "Archive for {{ year }}"
permalink: "archives/{{ year }}/"
pagination:
  data: collections.years
  size: 1
  alias: year
---
{% extends "../../layouts/base.njk" %}

{% block content %}
  <h1>{{ title }}</h1>

  {% for article in collections.content %}
    {% if article.date | date('YYYY') == year %}
    <p>{{ article.data.title }}, {{ article.date | date }}</p>
    {% endif %}
  {% endfor %}
{% endblock %}